#Step 0: make node directory in/var/lib
cd /var/lib
sudo mkdir node

# Step 1: Move Node Exporter binary to /var/lib/node 
sudo mv node_exporter-1.9.0.linux-amd64/node_exporter /var/lib/node

# Step 2: Create a systemd service file for Node Exporter
sudo tee /etc/systemd/system/node_exporter.service <<EOF
[Unit]
Description=Prometheus Node Exporter
Documentation=https://prometheus.io/docs/introduction/overview/
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=prometheus
Group=prometheus
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/var/lib/node/node_exporter

SyslogIdentifier=prometheus_node_exporter
Restart=always

[Install]
WantedBy=multi-user.target

# Step 3: Reload systemd daemon
sudo systemctl daemon-reload

# Step 4: Start Node Exporter service
sudo systemctl start node_exporter

# Step 5: Enable Node Exporter to start on boot
sudo systemctl enable node_exporter

# Step 9: Check Node Exporter status
sudo systemctl status node_exporter
